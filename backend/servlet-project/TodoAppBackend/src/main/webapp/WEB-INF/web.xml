<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="3.0">

  <display-name>TodoAppBackend</display-name>
  <servlet>
    <servlet-name>CreateTaskServlet</servlet-name>
    <servlet-class>com.todoapp.servlets.CreateTaskServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateTaskServlet</servlet-name>
    <url-pattern>/tasks/*</url-pattern> <!-- Used for creating a task -->
  </servlet-mapping>

</web-app>
